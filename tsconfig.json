{
  "compilerOptions": {
    "moduleResolution": "node",
    "types": [
      "cypress",
      "cypress-map",
      "vite/client",
      "vite-plugin-svgr/client"
    ],
    "target": "es2016",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@support/*": ["../cypress/support/*"],
      "@fixtures/*": ["../cypress/fixtures/*"]
    }
  },
  "include": [
    "cypress/support/component.jsx",
    "cypress/support/**/*.ts",
    "cypress/e2e/**/*.js",
    "cypress/e2e/**/*.ts",
    "src/**/*.cy.js",
    "src/components/**/*.cy.jsx",
    "src/pages/**/*.cy.jsx"
  ]
}
